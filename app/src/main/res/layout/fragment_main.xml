<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipChildren="false"
                tools:context=".MainActivity$PlaceholderFragment">

    <com.nickpoxon.bitdate.CardStackContainer
        android:id="@+id/card_stack"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@android:color/holo_red_dark"
        android:layout_width="270dp"
        android:layout_height="320dp"/>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_margin="5dp"
            android:src="@drawable/ic_nah"
            android:background="@drawable/nah_button"
            android:id="@+id/nah_button"
            android:text="Nah"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageButton
            android:layout_margin="5dp"
            android:src="@drawable/ic_yeah"
            android:background="@drawable/yeah_button"
            android:id="@+id/yeah_button"
            android:text="Yeah"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>

</RelativeLayout>
